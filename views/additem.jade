html
    head
        title="Register"
        link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='')
        script(src='/bootstrap/dist/js/bootstrap.min.js')
        script(src='https://code.jquery.com/jquery-3.2.1.min.js')
     body
         .main.container
             .row
                 .col-md-6.col-md-offset-3
                     h1.display-4.m-b-2 Add Item
                     form(method="POST", action="/add")
                         div(style="margin-bottom:50px;")
                             div.form-group
                                 label(for='itemno') Item No:
                                 input#itemno.form-control(type='text', placeholder='Item No', name='itemno')
                              div.form-group
                                  label(for='name') Item Name:
                                  input#name.form-control(type='text', placeholder='Item Name', name='name')
                               div.form-group
                                   label(for='qty')
                                   input#qty.form-control(type='number', placeholder='Quantity', name='qty')
                                button.btn.btn-primary(type='submit') Add
             div.footer
